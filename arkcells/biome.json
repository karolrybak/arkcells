{
	"$schema": "node_modules/@biomejs/biome/configuration_schema.json",
	"files": {
		"includes": ["src/**", "tests/**"]
	},
	"assist": {
		"enabled": true
	},
	"formatter": {
		"enabled": true,
		"lineWidth": 180
	},
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"noRestrictedImports": "error"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"useIterableCallbackReturn": "off"
			},
			"complexity": {
				"useLiteralKeys":"off"
			}
		}
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"javascript": {
		"formatter": {
			"arrowParentheses": "asNeeded",
			"bracketSameLine": true,
			"bracketSpacing": true,
			"indentStyle": "tab",
			"indentWidth": 2,
			"jsxQuoteStyle": "double",
			"quoteProperties": "asNeeded",
			"trailingCommas": "es5",
			"semicolons": "asNeeded",
			"lineWidth": 150
		}
	}
}
